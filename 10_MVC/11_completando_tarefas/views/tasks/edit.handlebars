<div class="container">
    <h1>Editing task: {{task.title}}</h1>
    <form action="/tasks/edit" method="post">  
    <input type="hidden" name="id" value="{{task.id}}">
        <div class="form-control">
            <label for="title">Título</label>
            <input type="text" name="title" id="title" placeholder="Qual é a tarefa" value="{{task.title}}">
        </div>
        <div class="form-control">
            <label for="description">Título</label>            
            <textarea name="description" id="description" placeholder="Descreva a tarefa">{{task.description}}</textarea>
        </div>
        <input type="submit" value="Editar">
    </form>
</div>