<div class="container">
    <h1>Create Tasks</h1>
    <form action="/tasks/add" method="post">
        <div class="form-control">
            <label for="title">Título</label>
            <input type="text" name="title" id="title" placeholder="Qual é a tarefa">
        </div>
        <div class="form-control">
            <label for="description">Título</label>
            <textarea name="description" id="description" placeholder="Descreva a tarefa"></textarea>
        </div>
        <input type="submit" value="Criar">
    </form>
</div>