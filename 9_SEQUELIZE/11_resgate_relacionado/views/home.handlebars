<h1>Usu√°rios cadastrados</h1>
<div class="container">
    {{#each users}}
        <div class="item">
            <h3>{{this.name}}</h3>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}" class="detalhes-button">Ver detalhes</a>
                <a href="/users/edit/{{this.id}}" class="edit-button">Editar</a>
                <form action="/users/delete/{{this.id}}" method="post">
                    <input type="submit" value="Excluir" class="delete-button">
                </form>
            </div>
        </div>
    {{/each}}
</div>